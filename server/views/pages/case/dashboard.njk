{% extends "layout/citizen-authenticated.njk" %}

{% from "components/action-card/macro.njk" import actionCard %}
{% from "components/promo-panel/macro.njk" import promoPanel %}
{%- from "moj/components/alert/macro.njk" import mojAlert -%}

{% set mainClasses = "app-container govuk-body" %}

{% block content %}
  <h1 class="govuk-heading-xl govuk-!-static-margin-bottom-8">Track my case</h1>
  <div class="govuk-grid-row govuk-!-margin-bottom-6">
    <div class="govuk-grid-column-one-third">
      <div class="action-card-wrapper">
        {{ actionCard(
          "Find your court information",
          "Look up the court where the next hearing or trial for your case is being held. You need your unique reference number.",
          "/case/search",
          "Find your court",
          "default",
          0
        ) }}
      </div>
    </div>
    <div class="govuk-grid-column-one-third">
      <div class="action-card-wrapper">
        {{ actionCard(
          "Understand the process",
          "See what stage you’re at in the process and get to know who’s who in the criminal justice system.",
          "/case/support-roles",
          "Find out about the process"
        ) }}
      </div>
    </div>
    <div class="govuk-grid-column-one-third">
      <div class="action-card-wrapper">
        {{ actionCard(
          "Get to know your rights",
          "Including making a victim personal statement, compensation, and your property.",
          "/case/victim-personal-statement",
          "Find out about your rights"
        ) }}
      </div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ promoPanel(
        "Find help and support",
        "Find charities and organisations that can give you further support and advice.",
        "/case/victim-support-links",
        "Find support",
        "/assets/images/vsc2.jpg",
        "default"
      ) }}
    </div>
  </div>

  {% if allowDebug and user %}
    <h2 class="govuk-heading-m">User information</h2>
    <pre><code>{{ user | dump(2) }}</code></pre>
  {% endif %}

{% endblock %}
