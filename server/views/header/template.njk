            <li class="one-login-header__nav__list-item">
              <a class="one-login-header__nav__link one-login-header__nav__link--one-login" href="{{ oneLoginLink }}" target="_blank">
                <span class="one-login-header__nav__link-content">
                  GOV.UK One Login
                </span>
                <span title="{{ params.email }}">
                  {{ littlePersonIcon() }}
                  {{ littlePersonIcon("focus") }}
                </span>
              </a>
            </li>
            <li class="one-login-header__nav__list-item">
              <a class="one-login-header__nav__link" href="{{ signOutLink }}">
